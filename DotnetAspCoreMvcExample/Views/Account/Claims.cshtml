@{
    ViewData["Title"] = "User Profile";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewData["Title"].</h2>
        <p>You're logged in as <strong>@User.Identity.Name</strong>. Your access token is <strong>@ViewData["accessToken"]</strong>. And these claims are bound to your profile:</p>
        <table class="table">
            <tr>
                <th>Claim</th>
                <th>Value</th>
                <th>Issuer</th>
            </tr>
        @foreach (var claim in User.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
                <td>@claim.Issuer</td>
            </tr>
        }
        </table>
    </div>
</div>